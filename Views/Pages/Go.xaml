<Page x:Class="MCLaunch.Views.Pages.Go"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MCLaunch.Views.Pages"
      xmlns:pu="https://opensource.panuon.com/wpf-ui"
      mc:Ignorable="d" 
      d:DesignHeight="370" d:DesignWidth="620"
      Title="Go">

    <Grid>
        <ComboBox
        x:Name="VerCombo"
        Width="160"
        Height="35"
        pu:ComboBoxHelper.ClearButtonVisibility="VisibleOnHover"
        pu:ComboBoxHelper.CornerRadius="4"
        pu:ComboBoxHelper.ItemsHoverBackground="#2236AAF7"
        pu:ComboBoxHelper.ItemsSelectedBackground="#36AAF7"
        pu:ComboBoxHelper.ItemsSelectedForeground="#FFFFFF"
        pu:ComboBoxHelper.OpenedBorderThickness="0"
        pu:ComboBoxHelper.OpenedCornerRadius="4,4,0,0"
        pu:ComboBoxHelper.OpenedForeground="#36AAF7"
        pu:ComboBoxHelper.OpenedShadowColor="#36AAF7"
        pu:ComboBoxHelper.Watermark="选择一个游戏版本"
        pu:ComboBoxHelper.WatermarkForeground="Gray"
        pu:DropDownHelper.BorderThickness="0"
        pu:DropDownHelper.CornerRadius="0,0,4,4"
        pu:DropDownHelper.ShadowColor="#36AAF7"
        pu:DropDownHelper.VerticalOffset="-1"
        pu:ShadowHelper.BlurRadius="15"
        pu:ShadowHelper.ShadowDepth="5"
        BorderBrush="LightGray"
        BorderThickness="1.5" Margin="150,299,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <ComboBox
x:Name="JavaCombo"
Width="160"
Height="35"
pu:ComboBoxHelper.ClearButtonVisibility="VisibleOnHover"
pu:ComboBoxHelper.CornerRadius="4"
pu:ComboBoxHelper.ItemsHoverBackground="#2236AAF7"
pu:ComboBoxHelper.ItemsSelectedBackground="#36AAF7"
pu:ComboBoxHelper.ItemsSelectedForeground="#FFFFFF"
pu:ComboBoxHelper.OpenedBorderThickness="0"
pu:ComboBoxHelper.OpenedCornerRadius="4,4,0,0"
pu:ComboBoxHelper.OpenedForeground="#36AAF7"
pu:ComboBoxHelper.OpenedShadowColor="#36AAF7"
pu:ComboBoxHelper.Watermark="选择一个Java版本"
pu:ComboBoxHelper.WatermarkForeground="Gray"
pu:DropDownHelper.BorderThickness="0"
pu:DropDownHelper.CornerRadius="0,0,4,4"
pu:DropDownHelper.ShadowColor="#36AAF7"
pu:DropDownHelper.VerticalOffset="-1"
pu:ShadowHelper.BlurRadius="15"
pu:ShadowHelper.ShadowDepth="5"
BorderBrush="LightGray"
BorderThickness="1.5" Margin="150,259,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <TextBox x:Name="GameNameTextBox"
             Height="36" Width="170"
              pu:TextBoxHelper.CornerRadius="4"
     pu:TextBoxHelper.Icon="&#xe939;" pu:IconHelper.FontFamily="{StaticResource PanuonIconFont}"
     pu:TextBoxHelper.Watermark="请输入游戏用户名"
     pu:TextBoxHelper.FocusedForeground="#36AAF7" pu:TextBoxHelper.FocusedBorderBrush="#36AAF7" 
     pu:TextBoxHelper.FocusedShadowColor="#36AAF7"
     pu:ShadowHelper.Opacity="0.5" pu:ShadowHelper.BlurRadius="15" pu:ShadowHelper.ShadowDepth="5"
             Margin="315,259,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <Button Content="启动游戏!" Height="34" Width="170" 
    pu:ButtonHelper.CornerRadius="4" 
    Background="#36AAF7" Foreground="#FFFFFF"
    pu:ButtonHelper.Icon="&#xe949;" pu:IconHelper.FontFamily="{StaticResource PanuonIconFont}" pu:IconHelper.Margin="0,0,10,0"
    pu:ButtonHelper.ShadowColor="#36AAF7" pu:ShadowHelper.BlurRadius="15" pu:ShadowHelper.ShadowDepth="5" Click="Button_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="315,300,0,0" />
        <TextBlock
Height="20"
pu:TextBlockHelper.HighlightBackground="LightGray"
pu:TextBlockHelper.HighlightForeground="Red"
pu:TextBlockHelper.HighlightRule="FirstOnly"
pu:TextBlockHelper.HighlightText="内存大小"
Text="本次启动游戏所使用内存大小" Margin="122,68,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="156"/>
        <Slider VerticalAlignment="Top"
    Foreground="DimGray"
    pu:SliderHelper.IsTextVisible="True" pu:SliderHelper.TextSpacing="0" pu:SliderHelper.TextStringFormat="N1"
    pu:SliderHelper.TrackThickness="10" 
    IsSnapToTickEnabled="True" TickFrequency="0.5" Margin="310,68,71,0" Maximum="100" Height="20">
            <Slider.Background>
                <LinearGradientBrush>
                    <GradientStop Color="#447CCBFC" />
                    <GradientStop Color="#44FF6BB8" Offset="1" />
                </LinearGradientBrush>
            </Slider.Background>
            <pu:SliderHelper.CoveredBackground>
                <LinearGradientBrush>
                    <GradientStop Color="#7CCBFC" />
                    <GradientStop Color="#FF6BB8" Offset="1" />
                </LinearGradientBrush>
            </pu:SliderHelper.CoveredBackground>
        </Slider>
    </Grid>
</Page>
